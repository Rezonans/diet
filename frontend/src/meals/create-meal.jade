.modal-header
  h3 Create new meal
.modal-body
  form
    .form-group
      label(for="create-meal-date") Date
      .input-group
        input#create-meal-date.form-control(type="text", datepicker-popup="mediumDate", ng-model="meal.date", is-open="opened", ng-required="true", close-text="Close")
        span.input-group-btn
          button.btn.btn-default(type="button", ng-click="open($event)")
            i.glyphicon.glyphicon-calendar
    .form-group
      label(for="create-meal-time") Time
      timepicker#create-meal-time(ng-model="meal.time")
    .form-group
      label(for="create-meal-text") Text
      input#create-meal-text.form-control(type="text", ng-model="meal.text")
    .form-group
      label(for="create-meal-calories") Calories
      input#create-meal-calories.form-control(type="number", ng-model="meal.calories")
.modal-footer
  button.btn.btn-primary(ng-click="ok()") OK
  button.btn.btn-warning(ng-click="cancel()") Cancel
